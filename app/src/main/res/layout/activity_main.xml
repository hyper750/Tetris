<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raulm.tetris.MainActivity"
    android:background="@drawable/main">

    <Button
        android:id="@+id/opcions"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/gear_gradient"
        android:layout_marginEnd="@dimen/marginGear"
        android:layout_marginTop="@dimen/marginGear"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opcions"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/MainActivity_linearLayout_MarginTop"
        android:paddingStart="@dimen/MainActivity_paddingEnd"
        android:paddingEnd="@dimen/MainActivity_paddingEnd">


            <com.example.raulm.tetris.ButoAmbFont
                android:id="@+id/player1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buto_sensepitjar"
                android:textAlignment="center"
                android:text="@string/player1"
                android:layout_marginBottom="@dimen/MainActivity_boto_marginBottom"
                android:textSize="@dimen/font_MainActivity_small" />

            <com.example.raulm.tetris.ButoAmbFont
                android:id="@+id/llistarPuntuacions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:background="@drawable/buto_sensepitjar"
                android:text="@string/llistarPuntuacions"
                android:layout_marginBottom="@dimen/MainActivity_boto_marginBottom"
                android:textSize="@dimen/font_MainActivity_small" />

            <com.example.raulm.tetris.ButoAmbFont
                android:id="@+id/player2Temps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:background="@drawable/buto_sensepitjar"
                android:text="@string/player2"
                android:layout_marginBottom="@dimen/MainActivity_boto_marginBottom"
                android:textSize="@dimen/font_MainActivity_small" />

            <com.example.raulm.tetris.ButoAmbFont
                android:id="@+id/player2Destruccio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:background="@drawable/buto_sensepitjar"
                android:text="@string/player2Destruccio"
                android:layout_marginBottom="@dimen/MainActivity_boto_marginBottom"
                android:textSize="@dimen/font_MainActivity_small" />

    </LinearLayout>


</RelativeLayout>
