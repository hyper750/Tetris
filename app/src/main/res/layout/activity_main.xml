<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raulm.tetris.MainActivity"
    android:background="@drawable/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/MainActivity_paddingBottom"
        android:paddingStart="@dimen/MainActivity_paddingStart"
        android:paddingEnd="@dimen/MainActivity_paddingEnd">

            <com.example.raulm.tetris.ButoAmbFont
                android:id="@+id/player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/player1"
                android:layout_marginEnd="@dimen/MainActivity_marginEnd"
                android:textSize="@dimen/font_MainActivity"/>

            <com.example.raulm.tetris.ButoAmbFont
                android:id="@+id/player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/player2"
                android:textSize="@dimen/font_MainActivity"/>
    </LinearLayout>



</RelativeLayout>
